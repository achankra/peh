# templates/backend-service/template/.github/workflows/ci.yml.ejs
# CI/CD Pipeline using platform-provided reusable workflows

name: CI/CD Pipeline

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  pipeline:
    uses: platform-org/platform-actions/.github/workflows/backend-pipeline.yml@v1
    with:
      service-name: <%= serviceName %>
      node-version: "20"
      deploy-environment: ${{ github.ref == 'refs/heads/main' && 'staging' || 'preview' }}
    secrets:
      registry-token: ${{ secrets.GHCR_TOKEN }}
      kubeconfig: ${{ secrets.KUBECONFIG }}
